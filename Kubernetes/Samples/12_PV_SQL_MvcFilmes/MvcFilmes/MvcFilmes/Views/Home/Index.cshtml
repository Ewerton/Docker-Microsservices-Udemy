@model List<Filme>

<h1 class="bg-info text-white">Filmes</h1>
<a asp-action="Create" class="btn btn-secondary">Incluir Filme</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Atores</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (Filme m in Model)
    {
        <tr>
            <td>@m.Id</td>
            <td>@m.Nome</td>
            <td>@m.Atores</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@m.Id">
                    Atualizar
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@m.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Deletar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>